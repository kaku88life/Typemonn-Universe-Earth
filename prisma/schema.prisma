generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
  id          String   @id @default(uuid())
  name        String
  description String?
  
  // Coordinates stored as JSON since PostGIS support in Prisma is complex
  // Format: { lat: number, lng: number, alt?: number }
  coordinates Json
  
  type        String   // 'City', 'MagicAssociation', 'Organization', 'Landmark'
  world_lines String[] @default([]) // ['Fate', 'UBW', 'HF', 'Zero', 'GrandOrder', 'Tsukihime']
  
  year_start  Int
  year_end    Int?     // Null means present/future
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("locations")
}
